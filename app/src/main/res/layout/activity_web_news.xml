<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".webnews.NewsDisplay">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appbar">
            <androidx.appcompat.widget.Toolbar
                app:layout_scrollFlags="scroll"
                android:id="@+id/toolbar"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kaltak_news"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
            </androidx.appcompat.widget.Toolbar>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/title_for_display"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:text="wvsyus"
            android:layout_below="@id/appbar"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/imageview_for_Display"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/title_for_display"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/content_for_display"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="30dp"
            android:text="afg"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_below="@id/imageview_for_Display" />


    </RelativeLayout>
</layout>